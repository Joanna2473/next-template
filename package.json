{
  "name": "@salgnt/next-template",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "export": "next export",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "pnpx simple-git-hooks"
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@types/node": "^18.7.8",
    "@types/react": "^18.0.17",
    "eslint": "^8.22.0",
    "eslint-config-next": "^12.2.5",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^28.1.3",
    "nano-staged": "^0.8.0",
    "next": "^12.2.5",
    "prettier": "2.7.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "simple-git-hooks": "^2.8.0",
    "typescript": "^4.7.4",
    "windicss": "^3.5.6",
    "windicss-webpack-plugin": "^1.7.5"
  },
  "nano-staged": {
    "**/*.{js,jsx,ts,tsx}": "eslint --fix",
    "**/*": "prettier --ignore-path .gitignore --ignore-unknown --write"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged",
    "preserveUnused": true
  }
}
