    "@types/node": "^17.0.35",
    "@types/react": "^18.0.9",
    "eslint": "^8.16.0",
    "eslint-config-next": "^12.1.6",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^28.1.0",
    "nano-staged": "^0.8.0",
    "next": "^12.1.6",
    "prettier": "2.6.2",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "simple-git-hooks": "^2.7.0",
    "typescript": "^4.6.4",
    "windicss": "^3.5.4",
    "windicss-webpack-plugin": "^1.7.2"
  },
  "nano-staged": {
    "**/*.{js,jsx,ts,tsx}": "eslint --fix",
